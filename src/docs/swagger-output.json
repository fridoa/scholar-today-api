    "schemas": {
      "Register": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "Sincere@april.biz"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      },
      "Login": {
        "type": "object",
